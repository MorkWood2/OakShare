<% include ../partials/header %>

 <div class="container">
     <header class="jumbotron">
         <div class="container background">
             <h1>Welcome To OakShare!</h1>
             <p>An easy to use public repository of Oakland based Art</p>
             <p>
                <a class="btn btn-default " href="/art/new">Add New Art</a>
             </p>
         </div>
     </header>

     <div class="row text-center grid">
        <% art.forEach((art) =>{ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= art.image %>">
                   <div class="caption">
                       <h4 class="heading"><%= art.name %></h4>
                   </div>
                   <p>
                       <a href="/art/<%= art._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
